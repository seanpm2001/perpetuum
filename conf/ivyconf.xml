<ivyconf>
    <properties file="${basedir}/conf/ivyconf-file.properties" />
    <conf defaultResolver="ibiblio" checkUpToDate="true" />
    <resolvers>
    	<ibiblio name="ibiblio" />
    	<filesystem name="internal">
                <ivy pattern="${basedir}/[module]/conf/ivy.xml" />
                <artifact pattern="${basedir}/[module]/lib/[artifact]-[revision].[ext]" />
        </filesystem>
    </resolvers>
    <modules>
    	<module organisation="perpetuum" name="core" resolver="internal" />
    	<module organisation="perpetuum" name="console-webapp" resolver="internal" />
    </modules>
</ivyconf>