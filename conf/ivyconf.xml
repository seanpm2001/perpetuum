<ivyconf>
    <properties file="${basedir}/conf/ivyconf-file.properties" />
    <conf defaultResolver="ibiblio" checkUpToDate="true" />
    <resolvers>
    	<ibiblio name="ibiblio" />
    	<filesystem name="internal">
                <ivy pattern="${basedir}${file.separator}[module]${file.separator}conf${file.separator}ivy.xml" />
                <artifact pattern="${basedir}${file.separator}[module]${file.separator}lib${file.separator}[artifact]-[revision].[ext]" />
        </filesystem>
    </resolvers>
    <modules>
    	<module organisation="perpetuum" name="perpetuum" resolver="internal" />
    </modules>
</ivyconf>